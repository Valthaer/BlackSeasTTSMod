<Panel id="panel_ship_orders_bg" width="230" height="400" rectAlignment="MiddleRight" color="#00000000" raycastTarget="true">
    <Image image="BS_TTS_MENU_LATERAL"></Image>
</Panel>

<Panel id="panel_ship_orders" width="230" height="400" color="#00000000" rectAlignment="MiddleRight" padding="30 30 30 30" raycastTarget="true">
    <VerticalLayout>
        <Slider id="slider_knots" minValue="0" maxValue="10" wholeNumbers="true" value="3" colors="#00000000|#00000000|#00000000|#00000000" backgroundcolor="#FFFFFFF" onValueChanged="slider_knots_changed"></Slider>
        <Button id="button_move_forward" onClick="move_forward">Move 3 knots</Button>    
        <HorizontalLayout>
            <Panel>
                <Button id="button_red_turn_left" onClick="on_red_turn_left"></Button>
                <Image image="R_LEFT" width="28" height="30"></Image>
            </Panel>
            <Panel>
                <Button id="button_red_turn_right" onClick="on_red_turn_right"></Button>
                <Image image="R_RIGHT" width="28" height="30"></Image>
            </Panel> 
        </HorizontalLayout>
        <HorizontalLayout>
            <Panel>
                <Button id="button_yellow_turn_left" onClick="on_yellow_turn_left"></Button>
                <Image image="Y_LEFT" width="28" height="30"></Image>
            </Panel>
            <Panel>
                <Button id="button_yellow_turn_right" onClick="on_yellow_turn_right"></Button>
                <Image image="Y_RIGHT" width="28" height="30"></Image>
            </Panel>            
        </HorizontalLayout>
        <Button id="button_fire" onClick="on_fire">Fire</Button>
        <Panel id="spacer" height="0"/>
        <Button id="button_deploy_fleet" onClick="deploy_fleet">Deploy a Fleet</Button>     
        <Panel id="spacer2" height="0"/>
